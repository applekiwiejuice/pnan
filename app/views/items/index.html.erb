<p id="notice"><%= notice %></p>
<div class="text-center">
  <h1>Breads</h1>
  <hr>
</div>
<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item code</th>
      <th>
        <ul style="list-style-type:none;">
          <li>
            <p>Packs</p>
          </li>
        </ul>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.item_code %></td>
        <td>
          <ul style="list-style-type:none;">
            <% item.packs.each do |list| %>
              <li><%= list.quantity %> for <%= number_to_currency(list.price)%></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Add Packs', item_packs_path(item), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Item', new_item_path, class: "btn btn-warning btn-lg w-25 mx-auto mb-2" %>
<%= link_to 'Back', root_path %>
